<% @page_title = "UserAuth | Signup" %>
<div class="Sign_Form">

  <h1>Sign Up</h1>
  <%= form_tag :action => 'create' do %>
    <p> Username:</br> <%= text_field_tag :username%> </p>
    <p> Email:</br> <%= text_field_tag :email%> </p>
    <p> Password:</br> <%= password_field_tag :password%></p>
    <p> Password Confirmation:</br> <%= password_field_tag :password  %> </p>
    <%= submit_tag 'Signup' %>
    <%end%>

  <% if @user.errors.any? %>
    <ul class="Signup_Errors">
    <% for message_error in @user.errors.full_messages %>
      <li>* <%= message_error %></li>
    <% end %>
    </ul>
  <% end %>
</div>
